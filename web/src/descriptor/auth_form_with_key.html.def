<html>
    <head>
        <meta charset="UTF-8" />
        <title>auth</title>
        <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
        <link rel="stylesheet" href="./css">
    </head>
    <body>
    <div class="container">
      <div class="flex-header">
        <div class="left-header">
          <select class="dataselect" onChange="location.href=value;">
          %%databox_list
          </select>
        </div>
        <div class="right-header">
        <button class="even-btn-menu">=</button>
        <nav>
         <ul>
         %%auth_form_menu
         </ul>
        </nav>
        </div>
      </div>
      <div class="auth-container">
      <div class="auth-form">
      <form method="post" action="./shell.auth">
      <h1>key.auth</h1>
      <div class="wrapper">
        <input type="text" name="small_shell_authkey_%%rand" placeholder="please paste key" list="keylist" autocomplete="on">
        <datalist id="keylist">
        <option value="%%key_placeholder"></option>
        </datalist>
        <button class="button" type="submit" onclick="setkey()">SUBMIT</button>
      </div>
      </form>
     </div>
     </div>
     <div class="footer">
     %%footer
     </div>
   </div>
   <script>
  
   // menu
   const btn = document.querySelector('.even-btn-menu');
   const nav = document.querySelector('nav');

   document.addEventListener('click', (e) => {
     if(e.target.closest('.even-btn-menu')) {
       nav.classList.toggle('open-menu')
       if (btn.innerHTML === '=') {
         btn.innerHTML = '-';
       } else {
         btn.innerHTML = '=';
       }
     }else{
       nav.classList.remove('open-menu')
       btn.innerHTML = '=';
     }
   })


  // key push to localstorage  
  function setkey() {
     localStorage.setItem("small_shell_authkey_%%rand", "%%key_placeholder");
  }

 </script>
 </body>
</html>
