<html>
    <head>
        <meta charset="UTF-8" />
        <title>table view</title>
        <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
        <link rel="stylesheet" href="./%%app_css">
    </head>
    <body>
    <div class="container">
      <div class="flex-header">
       <div class="left-header">
        <h3>%%app</h3>
       </div>
       <div class="right-header">
        <button class="even-btn-menu">=</button>
        <nav>
        <ul>
        %%common_menu
        </ul>
        </nav>
        </div>
      </div>
      <div class="table-box">
       <div class="description">
         <h1>#%%databox</h1>
       </div>
       <form method="post" action="./%%app?%%params&req=table">
       <div class="wrapper">
        <input type="search" name="table_command" placeholder="Hi %%user, please input filter words or input unix sort command with key name of column e.g.[sort -r %%key]">
       </div>
       </form>
       <div class="tags">
        <p>FILTER:%%filter&nbsp;&nbsp;[%%sort] data.num:%%num</p>
        %%table_menu
        %%tag
       </div>
       %%table
       <div class="pagelink">
       %%page_link
       </div>
      </div>
    </div>
    <script>
    const btn = document.querySelector('.even-btn-menu');
    const nav = document.querySelector('nav');

    document.addEventListener('click', (e) => {
      if(e.target.closest('.even-btn-menu')) {
        nav.classList.toggle('open-menu')
        if (btn.innerHTML === '=') {
          btn.innerHTML = '-';
        } else {
          btn.innerHTML = '=';
        }
      }else{
        nav.classList.remove('open-menu')
        btn.innerHTML = '=';
      }
    })

   </script>
   </body>
</html>
