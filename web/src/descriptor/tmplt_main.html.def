<html>
    <head>
        <meta charset="UTF-8" />
        <title>%%app portal</title>
        <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
        <link rel="stylesheet" href="./%%app_css">
    </head>
    <body>
    <div class="container">
      <div class="flex-header">
        <div class="left-header">
          <h2><a href="./%%app?%%params&req=main">%%app</a></h2>
        </div>
        <div class="right-header">
        <button class="even-btn-menu">=</button>
        <nav>
         <ul>
         %%common_menu
         </ul>
        </nav>
        </div>
      </div>
      <div class="main">
        <div class="left-nav">
        </div>
        <div class="description">
          <h1>Hello Small Shell World, you must be %%user_name</h1>
          <p>please update html definition refering to the <a href="https://small-shell/cook_book/#htmlcss-design-recipe">recipe</a></p>
          <a href="./%%app?%%session&req=table"><button class="button">SEARCH</button></a>
        </div>
     </div>
    </div>
    <script>
    const btn = document.querySelector('.even-btn-menu');
    const nav = document.querySelector('nav');

    document.addEventListener('click', (e) => {
      if(e.target.closest('.even-btn-menu')) {
        nav.classList.toggle('open-menu')
        if (btn.innerHTML === '=') {
          btn.innerHTML = '-';
        } else {
          btn.innerHTML = '=';
        }
      }else{
        nav.classList.remove('open-menu')
        btn.innerHTML = '=';
      }
    })

   </script>
   </body>
</html>

