<html>
  <head>
    <meta charset="UTF-8" />
    <title>command console</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link rel="stylesheet" href="./css">
  </head>
  <body>
    <div class="console-container">
      <div class="flex-header">
        <div class="left-header">
          <p>DataBox:</p>
          <select class="dataselect" onChange="location.href=value;">
          %%databox_list
          </select>
        </div>
        <div class="right-header">
          <button class="even-btn-menu">=</button>
          <nav>
          <ul>
          %%common_menu
          </ul>
          </nav>
        </div>
      </div>

      <div class="console-box">
        <form method="post" action="./base?%%params&req=console&post=yes">
        <ul>
        <li>
          <button class="button" type="submit">EXEC</button>
          <input type="text" name="command" placeholder="Type any filter words or command [%%commands..] which can be pipelined to the databox" autocomplete="off">
        </li>
        </ul>
        </form>
        <div class="description">
          <h5>COMMAND CONSOLE for %%user</h5>
        </div>
        <pre>
<b># SMALL SHELL STATISTICS %%filters</b>

# STATISTICS LINKS
#----------------------------------------------------------------#
%%statistics
#----------------------------------------------------------------#

# SEARCH EXAMPLE
#----------------------------------------------------------------#
# snapshot [_s_ #stats]
# hourly statistics [_d_ #stats]
# daily statistics [_m_ #stats]
# monthly statistics [_y_ #stats]
#----------------------------------------------------------------#

..done
        </pre>
      </div>
      <div class="footer">
       %%footer
      </div>
    </div>

    <script>
      const btn = document.querySelector('.even-btn-menu');
      const nav = document.querySelector('nav');

      document.addEventListener('click', (e) => {
        if(e.target.closest('.even-btn-menu')) {
          nav.classList.toggle('open-menu')
          if (btn.innerHTML === '=') {
            btn.innerHTML = '-';
          } else {
            btn.innerHTML = '=';
          }
        }else{
          nav.classList.remove('open-menu')
          btn.innerHTML = '=';
        }
      })

    </script>
  </body>
</html>
