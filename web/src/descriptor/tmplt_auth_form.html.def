<html>
  <head>
    <meta charset="UTF-8" />
    <title>auth</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link rel="stylesheet" href="./%%app_css">
  </head>
  <body>
    <div class="container">
      <div class="auth-container">
        <div class="auth-form">
          <form method="post" action="./auth.%%app?%%params">
          %%message
          <h1>%%app</h1>
          <div class="wrapper">
            <input type="text" id="%%app_key_%%rand" name="%%app_key_%%rand" placeholder="Click and Load Key" autocomplete="off" onclick="loadKey()">
            <button class="button" type="submit" onclick="setKey()">CONNECT</button>
          </div>
          </form>
        </div>
      </div>
      <div class="footer">
      </div>
    </div>

    <script>

      // menu
      const btn = document.querySelector('.even-btn-menu');
      const nav = document.querySelector('nav');

      document.addEventListener('click', (e) => {
        if(e.target.closest('.even-btn-menu')) {
          nav.classList.toggle('open-menu')
          if (btn.innerHTML === '=') {
            btn.innerHTML = '-';
          } else {
            btn.innerHTML = '=';
          }
        }else{
          nav.classList.remove('open-menu')
          btn.innerHTML = '=';
        }
      })

      // local storage key handling
      function loadKey() {
       storedKey=localStorage.getItem("%%app_key_%%rand");
       document.getElementById("%%app_key_%%rand").value = storedKey;
      }

      function setKey() {
         var newkey = document.getElementById("%%app_key_%%rand").value;
         if (newkey !== '') {
           localStorage.setItem("%%app_key_%%rand", newkey);
         }
      }

    </script>
  </body>
</html>
