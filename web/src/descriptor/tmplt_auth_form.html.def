<html>
  <head>
    <meta charset="UTF-8" />
    <title>auth</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <link rel="stylesheet" href="%%static_url/%%app.css">
  </head>
  <body>
    <div class="container">
      <div class="auth-container">
        <div class="auth-form">
          <form method="post" action="./auth.%%app?%%params">
          %%message
          <h1>%%app</h1>
          <div class="wrapper">
            <input type="text" id="dummy" name="dummy" placeholder="Your key" autocomplete="off" required>
            <input type="hidden" id="%%app_authkey_%%rand" name="%%app_authkey_%%rand">
            <button class="button" type="submit" onclick="setKey()">LOGIN</button>
          </div>
          </form>
        </div>
      </div>
    </div>

    <script>

      // handle key
      const dummyValue = '***************************'
      const storedKey = localStorage.getItem("%%app_key_%%rand");

      window.onload = function() {
        if (storedKey !== null) {
          document.getElementById("dummy").value = dummyValue;
          document.getElementById("%%app_key_%%rand").value = storedKey;
        }
      }

      function dummyFormatChk(str) {
        return str.includes('*');
      }

      function keyFormatChk(str) {
        return /^[^:]+:[^:]+$/.test(str);
      }

      function keyAlert(str) {
        alert('key value is changed, please reload this page');
        document.getElementById("dummy").value = '';
      }

      function setKey() {
        let newValue = document.getElementById("dummy").value; 
        if (newValue !== dummyValue) {
          let dummyChkresult = dummyFormatChk(newValue);
          if (dummyChkresult === false){
            let newKey = newValue.replace(/^[^:]+:/, '');
            let decodedString = atob(newKey);
            let keyChkresult = keyFormatChk(decodedString); 
            if (keyChkresult === true){
              localStorage.setItem("%%app_authkey_%%rand", newKey);
              document.getElementById("%%app_authkey_%%rand").value = newKey;
            } else {
               keyAlert();
            }
          } else {
             keyAlert();
          }
        } 
      }

    </script>
  </body>
</html>
